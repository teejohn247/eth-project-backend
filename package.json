{
  "name": "edo-talent-hunt-backend",
  "version": "1.0.0",
  "description": "Backend API for Edo Talent Hunt authentication system",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "lint": "echo 'Linting not configured yet'",
    "postbuild": "cp package*.json dist/ && cp -r node_modules dist/",
    "docker:build": "docker build -t edo-talent-hunt-backend .",
    "docker:run": "docker run -p 3001:3001 edo-talent-hunt-backend"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "mongodb",
    "authentication",
    "otp"
